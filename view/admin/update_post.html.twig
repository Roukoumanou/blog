{% extends "admin/layout.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>

    <form action="/admin-update-post-{{ post.id }}" method="post">
        <div class="row">
            <div class="col-12 mb-3">
                <label for="title" class="form-label">Titre</label>
                <input type="text" name="title" class="form-control" id="title" value="{{ post.title }}" required aria-describedby="titleHelp">        
            </div>
    
            <div class="col-12 mb-3">
                <label for="status">Status</label>
    
                <select name="status" class="form-control" id="status">
                    <option value=20>Publique</option>
                    <option value=30>Brouillon</option>
                </select>
            </div>
    
            <div class="col-12 mb-3">
                <label for="intro" class="form-label">Introduction</label>
                <textarea id="intro" required class="form-control" name="intro" rows="3">{{ post.intro }}
                </textarea>
            </div>
    
            <div class="col-12 mb-3">
                <label for="content" class="form-label">Contenu</label>
                <textarea id="intro" class="form-control" name="content" rows="8">{{ post.content }}</textarea>
            </div>
        </div>
        <input type="hidden" name="_token" value="{{ app.user.token }}">
        <button type="submit" class="btn btn-primary">Sauver</button>
    </form>
{% endblock %}
